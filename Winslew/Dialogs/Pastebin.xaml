<Window x:Class="Winslew.Dialogs.Pastebin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Winslew.Properties"
        Title="Pastebin" Height="410" Width="878">
    <Window.Resources>
        <local:Settings x:Key="settings" />
    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,0.2">
            <LinearGradientBrush.GradientStops>
                <GradientStop Offset="0" Color="White" />
                <GradientStop Offset="1" Color="LightGray" />
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </Window.Background>
    <Grid DataContext="{StaticResource settings}">
        <TextBox Margin="12,30,252,12" Name="textBox_text" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" TextChanged="textBox_text_TextChanged" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,12,12,0" Name="textBox_title" VerticalAlignment="Top" Width="151" TextChanged="textBox_text_TextChanged" />
        <Label Content="Title" Height="28" HorizontalAlignment="Right" Margin="0,10,169,0" Name="label1" VerticalAlignment="Top" Width="77" HorizontalContentAlignment="Right" />
        <TextBox Text="{Binding Path=Default.PastebinEmail,Mode=TwoWay}" Height="23" HorizontalAlignment="Right" Margin="0,72,12,0" Name="textBox_email" VerticalAlignment="Top" Width="151" />
        <Label Content="Email" Height="28" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,70,169,0" Name="label2" VerticalAlignment="Top" Width="77" />
        <Label Content="Optional parameters" Height="28" HorizontalAlignment="Right" Margin="0,43,37,0" Name="label3" VerticalAlignment="Top" FontWeight="Bold" />
        <Label Content="Subdomain" Height="28" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,100,169,0" Name="label4" VerticalAlignment="Top" Width="77" />
        <TextBox Text="{Binding Path=Default.PastebinSubdomain,Mode=TwoWay}" Height="23" HorizontalAlignment="Right" Margin="0,102,12,0" Name="textBox_subdomain" VerticalAlignment="Top" Width="151" />
        <ComboBox SelectedValue="{Binding Path=Default.PastebinPrivate,Mode=TwoWay}" Height="23" HorizontalAlignment="Right" Margin="0,131,12,0" Name="comboBox_syntaxHighlighting" VerticalAlignment="Top" Width="108" />
        <Label Content="Syntax highlighting" Height="28" HorizontalAlignment="Right" Margin="0,131,126,0" Name="label5" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="120" />
        <ComboBox Height="23" HorizontalAlignment="Right" Margin="0,160,12,0" Name="comboBox_expiration" VerticalAlignment="Top" Width="108" SelectedValue="{Binding Path=Default.PastebinExpiration,Mode=TwoWay}" >
            <ComboBoxItem Content="Never" IsSelected="True" />
            <ComboBoxItem Content="10 Minutes" />
            <ComboBoxItem Content="1 Hour" />
            <ComboBoxItem Content="1 Day" />
            <ComboBoxItem Content="1 Month" />
        </ComboBox>
        <Label Content="Expiration" Height="28" HorizontalAlignment="Right" Margin="0,160,126,0" Name="label6" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right" />
        <ComboBox Height="23" HorizontalAlignment="Right" Margin="0,189,12,0" Name="comboBox_exposure" VerticalAlignment="Top" Width="108">
            <ComboBoxItem Content="Private" IsSelected="True" />
            <ComboBoxItem Content="Public" IsSelected="False" />
        </ComboBox>
        <Label Content="Post exposure" Height="28" HorizontalAlignment="Right" Margin="0,189,126,0" Name="label7" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right" />
        <Button Content="Send to Pastebin" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="button_sendToPastebin" VerticalAlignment="Bottom" Width="108" Click="button_sendToPastebin_Click" IsEnabled="False" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,0,147,12" Name="button_cancel" VerticalAlignment="Bottom" Width="75" Click="button_cancel_Click" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,223,12,0" Name="textBox_RiLTags" VerticalAlignment="Top" Width="151" />
        <Label Content="RiL Tags" Height="28" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,221,169,0" Name="label8" VerticalAlignment="Top" Width="77" />
        <TextBlock Height="75" HorizontalAlignment="Right" Margin="0,255,12,0" Name="textBlock_pasgtebinWarnin" Text="When sending text to Pastebin be aware that this is a public viewable service. Please don't upload private or secret content." VerticalAlignment="Top" Width="210" DataContext="{Binding}" TextWrapping="Wrap" />
        <Label Content="Text" FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="11,5,0,0" Name="label9" VerticalAlignment="Top" />
    </Grid>
</Window>
